{
  "manifest_version": 3,
  "name": "VoiceNavigator",
  "version": "1.0",
  "description": "Control any webpage using voice commands.",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>", "https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "40": "icons/icon40.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "40": "icons/icon40.png",
    "96": "icons/icon96.png"
  }
}
